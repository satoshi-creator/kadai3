<div>
  <%= flash[:notice] %>
</div>

<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image %>
  <h3> name <%= @user.name %></h3>
  <h3> introduction <%= @user.introduction %></h3>
</div>

<% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

<h1>New book</h1>

  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>

<table>

   <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
   </tr>

<% @books.each do |book| %>

   <tr>
       <td><%= image_tag book.user.get_profile_image %></td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>

   </tr>

<% end %>

</table>