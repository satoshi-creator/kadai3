<h2>User info</h2>
<div>
  <%= image_tag current_user.get_profile_image %>
  <h3> name <%= current_user.name %></h3>
  <h3> introduction <%= current_user.introduction %></h3>
</div>

<% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

<h1>New book</h1>

  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Users</h1>

<table>

   <tr>
      <th>image</th>
      <th>Name</th>
      <th colspan="3"></th>
   </tr>

<% @users.each do |user| %>

   <tr>
       <td><%= image_tag user.get_profile_image %></td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", user_path(user.id) %></td>
   </tr>

<% end %>

</table>