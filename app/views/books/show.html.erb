<div class="container">
  <div class="row">

    <div class="col-lg-4" >
      <h2>User info</h2>
      <table class="table table-striped">
          <%= image_tag @user.get_profile_image %>
          <h5> name <%= @user.name %></h5>
          <h5> introduction <%= @user.introduction %></h5>
      </table>

      <% if @user == current_user %>
        <p><%= link_to edit_user_path(@user), class: "btn btn-outline-secondary", method: :get do %>
            <i class="fa-solid fa-user-gear"></i>
           <% end %>
        </p>
      <% end %>

      <h1>New book</h1>

          <%= form_with model: @book do |f| %>
            <h4>Title</h4>
              <%= f.text_field :title %>
            <h4>Opinion</h4>
              <%= f.text_area :body %><br>
            <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="col-lg-8">

      <h2>Book detail</h2>
      <table class="table table-striped">
           <tr>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
              <th></th>
           </tr>

           <tr>
               <td><%= image_tag @book.user.get_profile_image %></td>
               <td><%= link_to @book.title, book_path(@book.id) %></td>
               <td><%= @book.body %></td>
               <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %></td>
               <% end %>
           </tr>





      </table>

    </div>
  </div>
</div>





